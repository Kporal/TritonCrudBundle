<div class="form-group">
    <a class="btn btn-default" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
        <i class="glyphicon glyphicon-list" aria-hidden="true"></i>
        Back to list
    </a>
    {% if ('edit' in actions) and (not hide_edit) %}
        <a class="btn btn-success"
           href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id':  " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
            <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
            Edit
        </a>
    {% endif %}
    {% if ('new' in actions) and (not hide_new) %}
        <a class="btn btn-primary" href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}">
            <i class="glyphicon glyphicon-plus" aria-hidden="true"></i>
            New
        </a>
    {% endif %}
    {% if ('delete' in actions) and (not hide_delete) %}
        <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}"
              method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ '{{ form_widget(delete_form) }}' }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure?');">
                <i class="glyphicon glyphicon-trash"></i>
                Delete
            </button>
        </form>
    {% endif %}
</div>

