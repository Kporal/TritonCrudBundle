{% if 'delete' in actions %}
    <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_by_id_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~"}) }}" }}">
        <i class="glyphicon glyphicon-trash"></i>
    </a>
{% endif %}
<a title='show' class="btn btn-success btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
    <i class="glyphicon glyphicon-eye-open"></i>
</a>
{% if 'edit' in actions %}
    <a  title='edit' class="btn btn-primary btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
        <i class="glyphicon glyphicon-pencil"></i>
    </a>
{% endif %}
